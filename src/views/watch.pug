extends base.pug

block content 
  video(src="/"+video.fileUrl,controls,width=1200,height=500)
  div
    button#play Play
    button#mute Mute
    input(type="range",value="0.5",step="0.1", min="0",max="1")#volume
    div 
      span#currentTime 00:00 
      span |
      span#totalTime  00:00
block scripts 
  script(src="/static/js/videoPlayer.js")